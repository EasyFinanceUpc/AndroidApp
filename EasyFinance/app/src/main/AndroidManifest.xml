<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.upc.edu.easyFinance">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_easy_finance"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_easy_finance_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="pe.upc.edu.easyFinance.activities.ForgotActivity"
            android:parentActivityName="pe.upc.edu.easyFinance.activities.SignInActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.upc.edu.easyFinance.activities.SignInActivity" />
        </activity>
        <activity
            android:name="pe.upc.edu.easyFinance.activities.SignUpActivity"
            android:parentActivityName="pe.upc.edu.easyFinance.activities.SignInActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.upc.edu.easyFinance.activities.SignInActivity" />
        </activity>
        <activity android:name="pe.upc.edu.easyFinance.activities.SignInActivity" />
        <activity android:name="pe.upc.edu.easyFinance.activities.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="pe.upc.edu.easyFinance.activities.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>